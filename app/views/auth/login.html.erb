<h1 class="title text-6xl w-full text-center pb-2">Login</h1>

<form class="flex flex-col gap-5 items-center justify-center" action="<%= url_for(controller: 'auth', action: 'verifyLogin') %>" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="focus:outline-none bg-white bg-opacity-10 p-2 rounded" type="text" name="user[email]" placeholder="Email" required />
  <input class="focus:outline-none bg-white bg-opacity-10 p-2 rounded" type="password" name="user[password]" placeholder="Password" required />
  <button class="light-button play-green-btn min-w-[216px] flex items-center justify-center bg-green-500 hover:bg-green-400 py-2 px-4 text-white font-bold gap-2 rounded flex items-center transition-all duration-200">
    <img src="<%= asset_path('play-white.png') %>" alt="play button" class="w-5 h-5 mr-2 fill-white playPng transition-all duration-200">
    <input type="submit" value="LOGIN" class="cursor-pointer transition-all duration-200" />
  </button>
</form>

<a href="<%= root_path %>">
    <button class="light-button min-w-[215px] bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-all duration 200">
      HOME
    </button>
</a>

<div class="flex gap-2 items-center justify-center">
  <p class="">Not registered ?</p>
  <a href="<%= url_for(controller: 'auth', action: 'register') %>" class="flex gap-2 items-center justify-center">
    <button class="text-blue-300">
      Register
    </button>
  </a>
</div>


<% if flash[:notice] %>
  <div class="p-2 rounded toastSuccess mb-20">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="p-2 rounded toastError mb-20">
    <%= flash[:alert] %>
  </div>
<% end %>